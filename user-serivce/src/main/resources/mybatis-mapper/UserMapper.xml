<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.userserivcel.mapper.UserMapper">

    <resultMap type="com.example.userserivcel.dto.UserDto"
               id="userInfo" >
        <result property="email" column="email"/>
        <result property="name" column="name"/>
        <result property="pwd" column="password"/>
        <result property="createAt" column="create_date"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <insert id="createUser" parameterType="com.example.userserivcel.dto.UserDto">
        INSERT INTO user (email,
                          name,
                          password,
                          create_date,
                          user_id
                          )
        values (#{email},
                #{name},
                #{pwd},
                #{createAt},
                #{userId}
                )
    </insert>

    <select id="getUserByAll" parameterType="java.util.HashMap" resultType="Map">
        SELECT *
        FROM user
    </select>

    <select id="getUserById" resultType="com.example.userserivcel.dto.UserDto">
        SELECT *
        FROM user
        where userid = #{userid}
    </select>

    <select id="findByEmail" resultMap="userInfo">
        select *
        from user
        where email = #{email}
    </select>

</mapper>